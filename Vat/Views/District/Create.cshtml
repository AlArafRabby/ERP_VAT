@model Vat.Models.District
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<div class="container">
  
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
             <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="DistrictId" class="control-label">District Name</label>
                    <input asp-for="DistrictId" class="form-control" />
                    <span asp-validation-for="DistrictId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">District Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

             <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="NameInBangla" class="control-label">District Name (In Bangla)</label>
                    <input asp-for="NameInBangla" class="form-control" />
                    <span asp-validation-for="NameInBangla" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="form-group float-lg-end">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        </form>
   
   
</div>

